<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffff"
    tools:context=".controller.DangKy"
    android:orientation="vertical"
    android:id="@+id/dangky"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        tools:ignore="MissingConstraints">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/admin_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Đăng ký"
            app:titleTextAppearance="@style/ToolbarTheme"
            android:background="@color/colorPrimary"
            app:titleTextColor="#fff"
            app:navigationIcon="@drawable/ic_baseline_arrow_back"
            style="@style/ToolbarTheme"
            />
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="#fff"
        android:paddingTop="16dp">

        <!-- Login progress -->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:orientation="vertical"
                android:weightSum="7">

                <TextView
                    android:id="@+id/txtName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="34dp"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="Họ tên/Tên quán ăn"
                    android:textColor="#000000"
                    android:textSize="16dp"/>

                <TextView
                    android:id="@+id/txtUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="Tên đăng nhập"
                    android:textColor="#000000"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/txtPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="Số điện thoại"
                    android:textColor="#000000"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/txtEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="Email"
                    android:textColor="#000000"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/txtAdd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="Địa chỉ"
                    android:textColor="#000000"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/txtPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="Mật khẩu"
                    android:textColor="#000000"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/txtRePassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="Xác nhận mật khẩu"
                    android:textColor="#000000"
                    android:textSize="16dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:weightSum="7"
                android:orientation="vertical">
                <EditText
                    android:layout_marginTop="34dp"
                    android:id="@+id/edtName"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:singleLine="true"
                    style="@style/EdittextTheme"
                    android:layout_weight="1"
                    android:background="@drawable/textbox_outline"/>

                <EditText
                    style="@style/EdittextTheme"
                    android:layout_marginTop="15dp"
                    android:id="@+id/edtUsername"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:singleLine="true"
                    android:layout_weight="1"
                    android:background="@drawable/textbox_outline"/>
                <EditText
                    style="@style/EdittextTheme"
                    android:layout_marginTop="24dp"
                    android:id="@+id/edtPhone"
                    android:inputType="phone"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:singleLine="true"
                    android:layout_weight="1"
                    android:background="@drawable/textbox_outline"/>
                <EditText
                    style="@style/EdittextTheme"
                    android:layout_marginTop="10dp"
                    android:id="@+id/edtEmail"
                    android:inputType="textEmailAddress"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:singleLine="true"
                    android:layout_weight="1"
                    android:background="@drawable/textbox_outline"/>
                <EditText
                    style="@style/EdittextTheme"
                    android:layout_marginTop="10dp"
                    android:id="@+id/edtAddress"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:singleLine="true"
                    android:layout_weight="1"
                    android:background="@drawable/textbox_outline"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/passwordTil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@color/black">
                    <EditText
                        style="@style/EdittextTheme"
                        android:layout_marginTop="24dp"
                        android:id="@+id/edtPassword"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:inputType="textPassword"
                        android:singleLine="true"
                        android:layout_weight="1"
                        android:background="@drawable/textbox_outline"/>

                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/RePasswordTil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@color/black">
                    <EditText
                        style="@style/EdittextTheme"
                        android:layout_marginTop="24dp"
                        android:id="@+id/edtRePassword"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:inputType="textPassword"
                        android:singleLine="true"
                        android:layout_weight="1"
                        android:background="@drawable/textbox_outline"/>
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

        </LinearLayout>

        <RadioGroup
            android:id="@+id/vaitro"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:weightSum="6"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioBtnNguoiMua"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textColor="#000"
                android:text="Người mua"
                android:textAlignment="textStart"
                android:textSize="12dp"
                android:onClick="onRadioButtonClicked"/>

            <RadioButton
                android:id="@+id/radioBtnNguoiBan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Người bán"
                android:checked="false"
                android:textColor="#000"
                android:textSize="12dp"
                android:layout_weight="2"
                android:onClick="onRadioButtonClicked"/>
            <RadioButton
                android:id="@+id/radioBtnShipper"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Shipper"
                android:checked="false"
                android:textColor="#000"
                android:textSize="12dp"
                android:layout_weight="2"
                android:onClick="onRadioButtonClicked"/>
        </RadioGroup>

        <Button
            android:id="@+id/btnSignUp"
            android:layout_width="156dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:background="@drawable/btn"
            android:text="Đăng ký" />


        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="30dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:weightSum="10"
            android:orientation="horizontal"
            android:layout_gravity="center"
            >

            <TextView
                android:id="@+id/txtSignin"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:height="30dp"
                android:gravity="center"
                android:text="Nếu đã có tài khoản"
                android:textColor="#4CAF50"
                android:textSize="16dp"
                android:textStyle="bold|italic" />

            <Button
                android:id="@+id/btnSignIn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="4"
                android:background="@drawable/btn"
                android:text="Đăng nhập"
                android:textColor="#FFEB3B"
                android:textSize="14sp"
                android:textStyle="bold|italic" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>