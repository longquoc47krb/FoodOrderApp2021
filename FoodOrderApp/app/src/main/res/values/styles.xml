<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CollapsedAppbar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="SearchTextViewTheme"  parent="Widget.AppCompat.SearchView">
        <item name="android:textColor">#6E6E6E</item>
        <item name="android:tint">#2E7D32</item>
        <item name="android:editTextColor">@android:color/black</item>
    </style>
    <style name="ExpandedAppbar" parent="@android:style/TextAppearance.Material.Title">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textSize">25dp</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="EdittextTheme" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12dp</item>
        <item name="android:ems">8</item>
        <item name="android:textAlignment">center</item>
    </style>

</resources>
