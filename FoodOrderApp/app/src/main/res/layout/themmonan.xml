<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/btnSignActive"
    tools:context=".DangNhap">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="14"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Thêm món ăn"
            app:titleTextAppearance="@style/ToolbarTheme"
            android:background="@color/colorPrimary"
            app:titleTextColor="#fff"
            app:navigationIcon="@drawable/ic_baseline_arrow_back"
            style="@style/ToolbarTheme"
            />


        <ProgressBar
            android:id="@+id/login_progress"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:weightSum="20"
            tools:layout_editor_absoluteX="124dp"
            tools:layout_editor_absoluteY="118dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="24dp"
                android:layout_weight="2.5"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:id="@+id/txtNameFood"
                    android:layout_width="170dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="0dp"
                    android:layout_weight="4"
                    android:height="35dp"
                    android:text="Tên món ăn"
                    android:textColor="#333"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtNameFood"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:layout_gravity="center"
                    android:layout_weight="6"
                    android:background="@drawable/textbox_outline"
                    android:ems="12"
                    android:inputType="textPersonName"
                    android:text=""
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="24dp"
                android:layout_weight="2.5"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:id="@+id/txtNameImg"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="30dp"
                    android:layout_weight="4"
                    android:height="35dp"
                    android:text="Hình Ảnh"
                    android:textColor="#333"
                    android:textSize="17dp"
                    android:textStyle="bold" />
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/foodimg"/>

                <Button
                    android:layout_gravity="center"
                    android:id="@+id/btnChooseImage"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_image"
                    android:backgroundTint="@color/colorPrimary" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="24dp"
                android:layout_weight="2.5"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:id="@+id/txtNameGiaban"
                    android:layout_width="138dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="30dp"
                    android:layout_weight="4"
                    android:height="35dp"
                    android:text="Giá Bán"
                    android:textColor="#333"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtNameGiaban"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:layout_gravity="center"
                    android:layout_weight="6"
                    android:background="@drawable/textbox_outline"
                    android:ems="12"
                    android:inputType="textPersonName"
                    android:text=""
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="24dp"
                android:layout_weight="2.5"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:id="@+id/txtNameMoTa"
                    android:layout_width="156dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_weight="4"
                    android:height="35dp"
                    android:text="Mô tả"
                    android:textColor="#333"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtNameMoTa"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:layout_gravity="center"
                    android:layout_weight="6"
                    android:background="@drawable/textbox_outline"
                    android:ems="12"
                    android:inputType="textPersonName"
                    android:text=""
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="24dp"
                android:layout_weight="2.5"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:id="@+id/txtNameDanhMuc"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_weight="3.5"
                    android:height="35dp"
                    android:text="Danh mục"
                    android:textColor="#333"
                    android:textSize="17dp"
                    android:textStyle="bold" />


                <EditText
                    android:id="@+id/edit_danhmuc"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6.5"
                    android:background="@drawable/textbox_outline"
                    android:drawableEnd="@drawable/ic_baseline_arrow_drop_down"
                    android:focusable="false"
                    android:inputType="none"
                    android:padding="2dp"
                    android:textAlignment="center"
                    android:textSize="15sp" />

            </LinearLayout>

            <Button
                android:id="@+id/btnThem"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:background="@drawable/btn"
                android:text="Thêm"
                android:textColor="@color/btnSignActive"
                android:textColorHighlight="#AC5B5B"
                android:textSize="20dp" />
        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>